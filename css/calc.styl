/* Basic reset */
@import 'fn'

*
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font: bold 14px Arial, sans-serif;

/* Finally adding some IE9 fallbacks for gradients to finish things up */

/* A nice BG gradient */
html
  height: 100%;
  background: white;
  //background: radial-gradient(circle, #fff 20%, #ccc);
  background-size: cover;

/* Using box shadows to create 3D effects */
#calculator
  position fixed
  top:0
  bottom:0
  left:0
  right 0
  padding: em(20) em(20) em(60);
  background: #f1f1f1;
  border-radius: em(3);
/* Top portion */
.top span.clear
  float: left;

/* Inset shadow on the screen to create chinaz */
.top .screen
  height: 4.5rem;
  word-wrap: break-word;
  word-break: break-word;
  border-radius: 0.1875rem;
  box-shadow: inset 0px 0.25rem rgba(0,0,0,0.2);
  font-size: 1.0625rem;
  color: #fff;
  text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
  text-align: right;
  letter-spacing: 1px;
  background: #525252;
  padding: em(10) em(10);
  overflow hidden;

/* Clear floats */
.keys, .top
  overflow: hidden;
  margin-top em(25)
/* Applying same to the keys */
.keys span, .top span.clear
  float: left;
  position: relative;
  top: 0;
  cursor: pointer;
  width: em(64);
  height: em(36);
  background: white;
  border-radius: em(3);
  box-shadow: 0px em(2) rgba(0, 0, 0, 0.2);
  margin: 0 em(7) em(21) 0;
  color: #888;
  line-height: em(36);
  text-align: center;
  user-select: none;
  transition: all 0.2s ease;
  border solid 1px #e3e3e3
/* Remove right margins from operator keys */
/* style different type of keys (operators/evaluate/clear) differently */
.keys span.operator
  background: #FFF0F5;
  margin-right: 0;

.keys span.eval
  background: #f1ff92;
  box-shadow: 0px 4px #9da853;
  color: #888e5f;

span.clear
  position: relative;
  top: 0;
  width: em(64);
  height: em(36);
  border-radius: em(3);
  margin: em(20) em(1) em(11) auto;
  line-height: em(36);
  text-align: center;
  user-select: none;
  transition: all 0.2s ease;
  background: #ee943f;
  box-shadow: 0px 4px #d16f56;
  color: white;
  display block
  &:active
    top: 4px;
    box-shadow: 0px 0px #d3545d;
  &:hover
    background: #ee891e;
    box-shadow: 0px 4px #d3545d;
    color: white;
/* Some hover effects */
.keys span:hover
  background: #909090;
  box-shadow: 0px 4px #606060;
  color: white;
  border 0

.keys span.eval:hover
  background: #abb850;
  box-shadow: 0px 4px #717a33;
  color: #ffffff;


/* Simulating "pressed" effect on active state of the keys by removing the box-shadow and moving the keys down a bit */
.keys span:active
  box-shadow: 0px 0px #6b54d3;
  top: 4px;

.keys span.eval:active
  box-shadow: 0px 0px #717a33;
  top: 4px;

