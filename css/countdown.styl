@import 'fn'
*
  margin 0
  padding 0
  box-sizing border-box

header
  height em(50)
  background-color: #fafafa;
  border-bottom: solid 1px #e3e3e3;
  box-shadow 0 0 10px #f0f0f0
  padding-top em(10)
  user-select none
  position fixed
  top 0
  left 0
  right 0
  z-index 99
  h2
    margin 0 auto
    text-align center
    font-size em(20)

.count-content
  margin-top em(100)

.count-title
  width em(300)
  display block
  list-style none
  margin 0 auto
  height em(30)
  > li
    width em(100)
    text-align center
    float left;

.count-val
  width em(300)
  display block
  list-style none
  margin em(10) auto
  height em(36)
  > li
    width em(100)
    text-align center
    float left;
    border solid 1px #e3e3e3
    margin-left -1px
    h em(36)
    overflow hidden
    color #595959

.count-btns
  width em(220)
  margin em(60) 0 0 auto
  height em(30)
  >span
    width em(70)
    h em(36)
    border solid 1px #e3e3e3
    border-radius em(3)
    margin-left -1px;
    text-align center
    color #009688
    display block
    float left
    &:active
      color #a0a0a0
      background-color #f0f0f0